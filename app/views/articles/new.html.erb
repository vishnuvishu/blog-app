
<h2> Add new article</h2>

<%= form_for @article do |f| %>
<% if @article.errors.any? %>
		<h3>errors find</h3>
		<ul>
		<%= @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %></br>

	<%= f.label :body %>
	<%= f.text_area :body %></br>

	<%= f.label :published %>
	<%= f.check_box :published %> </br>

	<%= f.label :published_date %>
	<%= f.date_select :published_date %> </br>

	<%= f.label :select_categories %>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> </br>

	<%= f.submit "Submit" %>
<% end %>


